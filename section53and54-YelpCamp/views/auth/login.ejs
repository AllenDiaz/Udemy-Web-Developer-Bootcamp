<% layout('layouts/boilerplate') %>

<h1>Login</h1>
<form action="/login" method="POST" class="validated-form" novalidate>
  <div class="mb-2">
    <label class="form-label" for="username">Username:</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="valid-feedback">looks good!</div>
  </div>
  <div class="mb-2">
    <label class="form-label" for="password">Password:</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="valid-feedback">looks good!</div>
    <button class="btn btn-success my-2">Login</button>
  </div>
</form>
